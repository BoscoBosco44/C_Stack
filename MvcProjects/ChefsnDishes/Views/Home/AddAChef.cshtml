@model Chef
@{
    ViewData["Title"] = "Add a Chef!";
    
}

<div class="text-center">
    <h1>@ViewData["Title"]</h1>
    <div class="line-h"></div>

    <form asp-action="CreateChef" asp-controller="Home" method="post">

        <div>
            <label asp-for="FirstName">First Name</label>
            <input asp-for="FirstName">
            <span asp-validation-for="FirstName"></span>
        </div>

        <div>
            <label asp-for="LastName">Last Name</label>
            <input asp-for="LastName">
            <span asp-validation-for="LastName"></span>
        </div>

        <div>
            <label asp-for="DOB">Date of Birth</label>
            <input type="date" asp-for="DOB">
            <span asp-validation-for="DOB"></span>
        </div>

        <input type="submit" class="button-19" value="Add Chef"

    </form>

</div>