@{
    ViewData["Title"] = "Add a new Dish!";
}
@model Dish

    <form class="main" asp-action="" asp-controller="Home" method="post">
        <div class="left-main3">

            <div class="inputDiv">
                <label asp-for="Chef">Chef's Name:</label>
                <input asp-for="Chef">
                <span asp-validation-for="Chef"></span>
            </div>
            
            <div class="inputDiv">
                <label asp-for="Name">Dish's Name:</label>
                <input asp-for="Name">
                <span asp-validation-for="Name"></span>
            </div>

            <div class="inputDiv">
                <label asp-for="Calories">Number of Calories:</label>
                <input asp-for="Calories">
                <span asp-validation-for="Calories"></span>
            </div>

        </div>

        <div class="center-main3">
            <label asp-for="Tastiness">Tastiness:</label>
            <select asp-for="Tastiness">
                @{
                    int i = 0;
                    while(i <= 5) {
                        <option value="">@i</option>;
                        i++;
                    }
                }
            </select>
        
        </div>

        <div class="right-main3">
            <label asp-for="Description">Description:</label>
            <textarea asp-for="Description" cols="40" rows="40"></textarea>>
        </div>


    </form>
